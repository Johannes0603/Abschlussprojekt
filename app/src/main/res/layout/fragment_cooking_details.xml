<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_cooking_details"
    tools:context=".ui.cookingDetailsFragment">

    <ImageView
        android:id="@+id/img_cover_detail"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="98dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/img_cover_detail"
        app:layout_constraintStart_toStartOf="@+id/img_cover_detail"
        app:layout_constraintTop_toBottomOf="@+id/img_cover_detail" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:backgroundTint="#997DB2A2"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/tvRecipe"
        app:layout_constraintStart_toStartOf="@+id/tvRecipe"
        app:layout_constraintTop_toBottomOf="@+id/tvRecipe" />

    <TextView
        android:id="@+id/tvRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tvRecipeName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvRecipeName"
        app:layout_constraintTop_toBottomOf="@+id/tvRecipeName" />

</androidx.constraintlayout.widget.ConstraintLayout>