<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_phyto"
    tools:context=".ui.cookingDetailsFragment">

    <ImageView
        android:id="@+id/iv_phytoDetail"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRecipeNamePhyto"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_phytoDetail"
        app:layout_constraintStart_toStartOf="@+id/iv_phytoDetail"
        app:layout_constraintTop_toBottomOf="@+id/iv_phytoDetail" />

    <ScrollView
        android:id="@+id/sv_tv_recipePhyto"
        android:layout_width="303dp"
        android:layout_height="396dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="@+id/tvRecipeNamePhyto"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/tvRecipeNamePhyto"
        app:layout_constraintTop_toBottomOf="@+id/tvRecipeNamePhyto">

        <TextView
            android:id="@+id/tvRecipePhyto"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="TextView" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>