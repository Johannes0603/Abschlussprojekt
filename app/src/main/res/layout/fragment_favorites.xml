<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <Button
        android:id="@+id/btnLexFav"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="113dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="113dp"
        android:text="Lexicon Favorites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPhytoFav"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Phyto Favorites"
        app:layout_constraintEnd_toEndOf="@+id/btnLexFav"
        app:layout_constraintStart_toStartOf="@+id/btnLexFav"
        app:layout_constraintTop_toBottomOf="@+id/btnLexFav" />

    <Button
        android:id="@+id/btnCookingFav"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Cooking Favorites"
        app:layout_constraintEnd_toEndOf="@+id/btnPhytoFav"
        app:layout_constraintStart_toStartOf="@+id/btnPhytoFav"
        app:layout_constraintTop_toBottomOf="@+id/btnPhytoFav" />
</androidx.constraintlayout.widget.ConstraintLayout>